    ],
    "deny": [
      "Bash(make test:*)",
      "Bash(find /Users/david:*)",
      "Bash(uv run pytest tests/:*)",
      "Bash(source .venv/bin/activate && uv run pytest tests/:*)"
    ],
    "ask": [
      "Bash(gh api --method:*)",
      "Bash(gh api repos/*/reactions:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh pr comment:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)"
    ]
  },
  "enabledMcpjsonServers": ["sequential-thinking", "logfire"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_FILE_PATHS\" | grep -qE 'tests/.*/cassettes/'; then echo 'BLOCKED: Do not write cassette files by hand. They are recorded as explained in the `vcr-test-recording` skill.' >&2; exit 1; fi"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '\\n[Reminder] Run /pydantic-review before committing'"
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "echo '\\n[Reminder] Symlink the plan into .claude/plans/ in this folder and reference it in CLAUDE.local.md. Also reference any todo list you have created.'"
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true
}
